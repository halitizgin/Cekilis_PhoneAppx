    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <TextBox x:Name="veri" Margin="0" TextWrapping="Wrap" VerticalAlignment="Stretch"/>

        <!-- Content body -->
    </StackPanel>
</ContentDialog>
